<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="10dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Familiyasi"
        >
        <EditText
            android:maxLines="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_back"
            android:id="@+id/edit_mentor_familiya_et"
            android:textColor="#757373"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ismi"
        android:layout_marginTop="10dp"
        >
        <EditText
            android:maxLines="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_back"
            android:id="@+id/edit_mentor_name_et"
            android:textColor="#757373"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="O'chestvasi"
        android:layout_marginTop="10dp"
        >
        <EditText
            android:maxLines="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_back"
            android:id="@+id/edit_group_ochestva_et"
            android:textColor="#757373"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="end"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0A252F"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:textColor="@color/white"
                android:text="Yopish"
                android:textAllCaps="false"
                android:id="@+id/yopish_btn"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0A252F"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="20dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:textColor="@color/white"
                android:text="O'zgartirish"
                android:textAllCaps="false"
                android:id="@+id/ozgartirish_btn"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>